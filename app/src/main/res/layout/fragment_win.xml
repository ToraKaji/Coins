<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:background="@drawable/win"
  android:layout_height="match_parent"
  tools:context=".fragments.WinFragment">

<TextView
  android:id="@+id/value_won"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  app:layout_constraintLeft_toLeftOf="parent"
  app:layout_constraintRight_toRightOf="parent"
  app:layout_constraintBottom_toTopOf="@id/collect"
  android:paddingBottom="20dp"
  android:textStyle="bold"
  android:textColor="#000"
  android:textSize="@dimen/win_loss_test_size"
  android:text="Congrats! You've won: "/>

  <Button
    android:id="@+id/collect"
    android:text="Collect!"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffa3a3fa"/>

</android.support.constraint.ConstraintLayout>